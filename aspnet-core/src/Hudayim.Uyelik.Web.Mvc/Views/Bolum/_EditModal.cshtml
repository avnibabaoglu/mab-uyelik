@using Hudayim.Uyelik.Web.Models.Common.Modals
@using Hudayim.Uyelik.Web.Models.Educations
@model EditEducationModalViewModel
@{ Layout = null; }
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditDepartmen")))
<form name="BolumEditForm" role="form" class="form-horizontal">
	<input type="hidden" name="Id" value="@Model.BolumDto.Id" />
	<div class="modal-body">
		<div class="form-group row">
			<label class="col-md-3 col-form-label" for="surname">@L("Univercity")</label>
			<div class="col-md-9">
				<select id="universiteId"
						name="UniversiteId"
						asp-for="@Model.BolumDto.UniversiteId"
						asp-items="@Model.LUniversiteler"
						class="form-control">
					<option value="">Seçiniz</option>
				</select>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-md-3 col-form-label" for="surname">@L("Faculity")</label>
			<div class="col-md-9">
				<select id="fakulteId"
						name="FakulteId"
						asp-for="@Model.BolumDto.FakulteId"
						asp-items="@Model.LFakulteler"
						class="form-control">
					<option value="">Seçiniz</option>
				</select>
			</div>
		</div>
		<div class="form-group row required">
			<label class="col-md-3 col-form-label" for="name">@L("Name")</label>
			<div class="col-md-9">
				<input id="ad" type="text" class="form-control" name="Ad" value="@Model.BolumDto.Ad" required minlength="2">
			</div>
		</div>
		<div class="form-group row required">
			<label class="col-md-3 col-form-label" for="name">@L("OrderNo")</label>
			<div class="col-md-9">
				<input id="siraNo" type="number" class="form-control" name="SiraNo" value="@Model.BolumDto.SiraNo">
			</div>
		</div>
		<div class="form-group row">
			<label class="col-md-3 col-form-label" for="IsActive">@L("IsActive")</label>
			<div class="col-md-9">
				<input id="aktifMi" type="checkbox" name="AktifMi" value="true" @(Model.BolumDto.AktifMi ? "checked" : "") />
			</div>
		</div>
	</div>
	@await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Bolum/_EditModal.js" asp-append-version="true"></script>