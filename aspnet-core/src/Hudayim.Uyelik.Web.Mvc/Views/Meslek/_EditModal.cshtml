@using Hudayim.Uyelik.Web.Models.Common.Modals
@using Hudayim.Uyelik.Web.Models.Mesleks
@model EditMeslekModalViewModel
@{ Layout = null; }
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditProfession")))
<form name="MeslekEditForm" role="form" class="form-horizontal">
	<input type="hidden" name="Id" value="@Model.MeslekDto.Id" />
	<div class="modal-body">
		<div class="form-group row required">
			<label class="col-md-3 col-form-label" for="name">@L("Name")</label>
			<div class="col-md-9">
				<input id="ad" type="text" class="form-control" name="Ad" value="@Model.MeslekDto.Ad" required minlength="2">
			</div>
		</div>
		<div class="form-group row ">
			<label class="col-md-3 col-form-label" for="name">@L("Code")</label>
			<div class="col-md-9">
				<input id="kod" type="text" class="form-control" name="Kod" value="@Model.MeslekDto.Kod" minlength="2">
			</div>
		</div>
		<div class="form-group row required">
			<label class="col-md-3 col-form-label" for="name">@L("OrderNo")</label>
			<div class="col-md-9">
				<input id="siraNo" type="number" class="form-control" name="SiraNo" value="@Model.MeslekDto.SiraNo">
			</div>
		</div>
		<div class="form-group row">
			<label class="col-md-3 col-form-label" for="IsActive">@L("IsActive")</label>
			<div class="col-md-9">
				<input id="aktifMi" type="checkbox" name="AktifMi" value="true" @(Model.MeslekDto.AktifMi ? "checked" : "") />
			</div>
		</div>
	</div>
	@await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Meslek/_EditModal.js" asp-append-version="true"></script>
