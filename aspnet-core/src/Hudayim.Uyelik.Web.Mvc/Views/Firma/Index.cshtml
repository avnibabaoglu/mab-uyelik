@using Hudayim.Uyelik.Web.Startup
@using Hudayim.Uyelik.Web.Models.Firmas
@model FirmaViewModel
@{ ViewBag.Title = L("CompanyManager");
	ViewBag.CurrentPageName = PageNames.Firma; }
@section scripts
{
	<environment names="Development">
		<script src="~/view-resources/Views/Firma/Index.js" asp-append-version="true"></script>
	</environment>

	<environment names="Staging,Production">
		<script src="~/view-resources/Views/Firma/Index.min.js" asp-append-version="true"></script>
	</environment>
}
<section class="content-header">
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-6">
				<h1>@L("Companies")</h1>
			</div>
			<div class="col-sm-6">
				<a href="javascript:;" data-toggle="modal" data-target="#FirmaCreateModal" class="btn bg-blue float-sm-right">
					<i class="fa fa-plus-square"></i>
					@L("Create")
				</a>
			</div>
		</div>
	</div>
</section>
<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<div class="row">
							<div class="col-md-6">
								<!--Use for bulk actions-->
							</div>
							<div class="col-md-6">
								@await Html.PartialAsync("~/Views/Firma/Index.AdvancedSearch.cshtml")
							</div>
						</div>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table id="FirmaTable" class="table table-striped table-bordered">
								<thead>
									<tr>
										<th></th>
										<th>@L("CompanyLogo")</th>
										<th>@L("Name")</th>
										<th>@L("WebAddress")</th>
										<th>@L("Mail")</th>
										<th>@L("PhoneNumber")</th>
										<th>@L("Address")</th>
										<th>@L("OrderNo")</th>
										<th>@L("CityName")</th>
										<th>@L("CategoryName")</th>
										<th style="width: 150px">@L("Actions")</th>
									</tr>
								</thead>
								<tbody></tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@await Html.PartialAsync("~/Views/Firma/_CreateModal.cshtml", Model)

<div class="modal fade" id="FirmaEditModal" tabindex="-1" role="dialog" aria-labelledby="FirmaEditModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
		</div>
	</div>
</div>
